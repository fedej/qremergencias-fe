              <!-- Button -->
              <div class="col-sm-12 controls">
                <a id="btn-forgotPassword" class="btn btn-success">
                  Enviar
                </a>
                <a href="/" id="btn-forgotPassword" type="button" class="btn btn-info">
                <i class="icon-hand-right"></i> &nbsp Cancelar </a>

              </div>
            </div>

					</form>
				</div>
			</div>
		</div>
	</div>

</div>

