<div class="intro-header">
	<div class="container">
		<div id="signupbox" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
			<div class="panel panel-info">
				<div class="panel-heading">
					<div class="panel-title">Completar Registraci√≥n</div>
				</div>
				<div class="panel-body" >
					<form id="signupform" class="form-horizontal" role="form">

						<div id="signupalert" style="display:none" class="alert alert-danger">
							<p>Error:</p>
							<span></span>
						</div>
						<div class="alert alert-info">
              Necesitamos que completes algunos datos extra
            </div>
            <div style="margin-bottom: 25px" class="input-group">
							<span class="input-group-addon"><i class="glyphicon"></i></span>
							<input
                id="complete-firstname"
                type="input"
                class="form-control"
                name="firstname"
                placeholder="Nombre"
              >
						</div>

						<div style="margin-bottom: 25px" class="input-group">
							<span class="input-group-addon"><i class="glyphicon"></i></span>
							<input
                id="complete-lastname"
                type="input"
                class="form-control"
                name="lastname"
                placeholder="Apellido"
              >
						</div>

						<div style="margin-bottom: 25px" class="input-group">
							<span class="input-group-addon"><i class="glyphicon"></i></span>
							<input
                id="complete-birthdate"
                type="date"
                class="form-control"
                name="birthdate"
                placeholder="Fecha de nacimiento"
              >
						</div>

						<div class="form-group">
							<!-- Button -->
							<button id="btn-completeRegistration" type="button" class="btn btn-success">
                <i class="icon-hand-right"></i> &nbsp Confirmar
              </button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>

</div>

